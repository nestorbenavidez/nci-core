
<p id="notice"><%= notice %></p>
<div class="module">
  <div class="module-head">
    <h3>List Field Classes</h3>
  </div>
  <div class="module-option clearfix">
    <div class="pull-left"></div>
    <div class="pull-right">
      <%= link_to 'New Field Class', new_field_class_path , class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="module-body table">
    <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped	 display" width="100%">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

  <tbody>
    <% @field_classes.each do |field_class| %>
      <tr>
        <td><%= field_class.name %></td>
        <td><%= link_to 'Show', field_class %></td>
        <td><%= link_to 'Edit', edit_field_class_path(field_class) %></td>
        <td><%= link_to 'Destroy', field_class, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </tfoot>
</table>
</div>
</div>


<br>
