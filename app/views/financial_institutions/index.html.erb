<p id="notice"><%= notice %></p>
<div class="col-lg-6">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">Financial Institutions</strong>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Apr</th>
                    <th>Insurance program</th>
                    <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% @financial_institutions.each do |financial_institution| %>
                  <td><%= financial_institution.name %></td>
                  <td><%= financial_institution.apr %></td>
                  <td><%= financial_institution.insurance_program %></td>
                  <td><%= link_to 'Show', financial_institution %></td>
                  <td><%= link_to 'Edit', edit_financial_institution_path(financial_institution) %></td>
                  <td><%= link_to 'Destroy', financial_institution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                 <% end %>
              </tr>
            </tbody>
        </table>
        <br>
      </div>
      <%= link_to 'New Financial Institution', new_financial_institution_path %>
    </div>
</div>
