<p id="notice"><%= notice %></p>

<h1>Financial Institutions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Apr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @financial_institutions.each do |financial_institution| %>
      <tr>
        <td><%= financial_institution.name %></td>
        <td><%= financial_institution.apr %></td>
        <td><%= link_to 'Show', financial_institution %></td>
        <td><%= link_to 'Edit', edit_financial_institution_path(financial_institution) %></td>
        <td><%= link_to 'Destroy', financial_institution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

